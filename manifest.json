{
  "manifest_version": 3,
  "name": "YouTube Sentiment Analyzer",
  "version": "1.0",
  "description": "Analyzes sentiment of YouTube video comments using LLM",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["assets/content.js"]
    }
  ],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  }
} 